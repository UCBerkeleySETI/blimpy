FROM kernsuite/base:dev
RUN docker-apt-install \
     python3-setuptools \
     python3-astropy \
     python3-scipy \
     python3-matplotlib \
     python3-bitshuffle \
     python3-h5py \
     python3-slalib \
     python3-pytest-runner \
     python3-pytest \
     python3-pip
COPY . /code
WORKDIR /code
RUN find blimpy tests -name "*.pyc" -delete
RUN pip3 install ".[full]"
RUN python3 setup.py test